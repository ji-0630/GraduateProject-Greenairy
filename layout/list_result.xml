<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/custom_list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50px"></TextView>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/custom_list_image"
            android:layout_width="300px"
            android:layout_height="300px"
            android:background="@drawable/ic_plant"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/custom_list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/custom_list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/custom_list4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/custom_list5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black"></TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
