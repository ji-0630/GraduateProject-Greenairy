<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Question2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성향 TEST"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="112dp"
                tools:layout_editor_absoluteY="288dp" />

            <RadioGroup
                android:id="@+id/manageG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_manage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="완벽주의" />

                <RadioButton
                    android:id="@+id/rb_manage2"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:text="게으름" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/speedG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_speed1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="성격 급함" />

                <RadioButton
                    android:id="@+id/rb_speed2"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:text="성격 느긋함" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/smellG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_smell1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="향에 관심이 많음" />

                <RadioButton
                    android:id="@+id/rb_smell2"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:text="향에 관심이 없음" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/coldG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_cold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추위를 많이 탐" />

                <RadioButton
                    android:id="@+id/rb_hot"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:text="더위를 많이 탐" />
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_result"
                android:text="결과보기">

            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
